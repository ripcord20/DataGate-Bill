    font-size: 1.3rem;
    font-weight: 600;
    letter-spacing: 1px;
    padding: 0 24px 24px 24px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    margin-bottom: 1rem;
}

.sidebar-header img {
    transition: transform 0.3s ease;
}

.sidebar-header img:hover {
    transform: scale(1.05);
}

/* Main Content */
.main-content {
    padding: 32px 24px;
}

/* Hamburger Button (Desktop) */

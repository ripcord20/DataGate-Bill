<body>
<div class="container-fluid">
    <div class="row">
        <!-- Include Responsive Admin Sidebar -->
        <%- include('partials/admin-responsive-sidebar', { page: 'dashboard', settings: settings }) %>
        
        <main class="col-md-10 ms-sm-auto main-content">
            <!-- GENIEACS CARDS -->
